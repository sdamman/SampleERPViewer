<UserControl x:Class="CustomT.UI.AF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:theme="clr-namespace:CustomT.UI"
             mc:Ignorable="d"
             d:Background="Cornsilk">

  <UserControl.Resources>

    <ControlTemplate x:Key="aegis">
      <Viewbox Stretch="Uniform">
        <Canvas x:Name="falið" Height="40" Width="40" Opacity="0.01">
          <Path Fill="#01000000"
                Data="m0 0 h 40 v 40 h -40 z"/>
          <Path Fill="{StaticResource brushBlack}"
                Data="M 20.166551,0 3.5,4.2663726 
                C 3.5,15.314547 3.5000329,35.015983 20.166551,39.999999 36.967277,35.078346 36.833102,15.314547 36.833102,4.2663726 Z 
                m 0,4.2663726 12.400179,3.4671167 
                c 0,12.7608087 -2.400314,23.7328197 -12.400179,27.9994487 C 10.819085,31.466309 7.7663726,20.366888 7.7663726,7.7334893 Z"/>
          <Path Fill="{StaticResource brushBlack}" 
                Data="m 20.166582,8.5332659 8.133222,2.6666461 
                c 0,9.282506 -1.639108,16.283784 -8.133222,20.266506 z"/>
        </Canvas>
      </Viewbox>
      <ControlTemplate.Triggers>
        <Trigger Property="IsMouseOver" Value="true">
          <Setter TargetName="falið" Property="Opacity" Value="1" />
        </Trigger>
      </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style x:Key="aegis_falið" TargetType="{x:Type Button}">
      <Setter Property="Template" Value="{StaticResource aegis}"/>
    </Style>

  </UserControl.Resources>

  <Button Style="{DynamicResource aegis_falið}"
          Cursor="Hand"/>
</UserControl>