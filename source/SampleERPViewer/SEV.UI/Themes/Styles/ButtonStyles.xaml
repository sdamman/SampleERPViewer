      <Setter.Value>
        <ControlTemplate TargetType="{x:Type Button}">
          <Viewbox Stretch="Uniform" >
            <Canvas Width="40" Height="40">
              <Path x:Name="bg"
                    Data="m7,5 h13 l5,5 h3 v5 h5 v21 h-18 v-5 h-8 z"
                    Stroke="{x:Null}"
                    Fill="{theme:ThemeResource ResourceKey=TransparentBackground}"/>
              <gui:XamlImage x:Name="glyph"
                             Template="{DynamicResource Icon_Copy}"
                             Foreground="{StaticResource brushMainThemeBlue}"/>
            </Canvas>
          </Viewbox>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter TargetName="glyph" Property="Foreground" 
                      Value="{StaticResource brushBlack}" />
              <Setter TargetName="bg" Property="Fill" 
                      Value="{StaticResource brushMainThemeBlue}" />
