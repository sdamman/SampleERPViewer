<UserControl x:Class="SEV.UI.UserControls.ItemMaster"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:conv="clr-namespace:SEV.UI.Converters"
             xmlns:uc="clr-namespace:SEV.UI.UserControls"
             xmlns:theme="clr-namespace:CustomT.UI"
             xmlns:gui="clr-namespace:CustomT.UI.UserControls"
             mc:Ignorable="d" d:Background="White"
             d:DesignHeight="450" d:DesignWidth="800">

  <UserControl.Resources>
    <conv:CurrencyDisplayConverter x:Key="cDC"/>
    <conv:TrimContentConverter x:Key="tCC"/>
    <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource bodyCopy}">

    </Style>
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource TextBoxStyle}">
      <Setter Property="IsReadOnly" Value="True"/>
    </Style>
  </UserControl.Resources>

  <Grid Margin="20,0">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Border Background="{theme:ThemeResource ResourceKey=MouseOverBackground}"
                Margin="-5,0,-5,4"/>
    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,4">
      <TextBlock Text="Item Master" 
               FontFamily="Segoe UI Semibold" FontSize="24"
               Foreground="{StaticResource brushMainThemeBlue}"/>
      <Button Style="{DynamicResource ButtonCopy}" 
              Height="25" Margin="4,0,4,0"
              Command="{Binding CommandCopyItemMaster}"/>
    </StackPanel>
    <uc:CurrentDate Grid.Row="0"  HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom"/>

    <Grid Grid.Row="1">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>

      <Grid Grid.Row="0">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="1*"/>
          <ColumnDefinition Width="1.6*"/>
          <ColumnDefinition Width="0.3*"/>
          <ColumnDefinition Width="1*"/>
          <ColumnDefinition Width="1.6*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="P/N"/>
        <TextBox Grid.Row="0" Grid.Column="1" 
                 Text="{Binding Item.PartNumber, FallbackValue='PartNumber',
                  Converter={StaticResource tCC}}"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Description"/>
        <TextBox Grid.Row="1" Grid.Column="1" 
                 Text="{Binding Item.Description, FallbackValue='PART,DESCRIPTION,TRUNCAT.'}"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Current Revision"/>
        <TextBox Grid.Row="2" Grid.Column="1" 
                 Text="{Binding Item.Revision, FallbackValue='000'}"/>
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Bin"/>
        <TextBox Grid.Row="3" Grid.Column="1" 
                 Text="{Binding Item.Location, FallbackValue='Location',
                  Converter={StaticResource tCC}}"/>

        <TextBlock Grid.Row="0" Grid.Column="3" Text="Std Cost"/>
        <TextBox Grid.Row="0" Grid.Column="4" 
                 Text="{Binding Item.StandardCost, FallbackValue='$101.01',
                        Converter={StaticResource cDC}}"/>
        <TextBlock Grid.Row="1" Grid.Column="3" Text="UOM"/>
        <TextBox Grid.Row="1" Grid.Column="4" 
                 Text="{Binding Item.UnitOfMeasure, FallbackValue='EA'}"/>
        <TextBlock Grid.Row="2" Grid.Column="3" Text="Qty On Hand"/>
        <TextBox Grid.Row="2" Grid.Column="4" 
                 Text="{Binding Item.QuantityOnHand, FallbackValue='1.00'}"/>
        <TextBlock Grid.Row="3" Grid.Column="3" Text="Qty Available"/>
        <TextBox Grid.Row="3" Grid.Column="4" 
                 Text="{Binding Item.QuantityAvailable, FallbackValue='1.00'}"/>
        <TextBlock Grid.Row="4" Grid.Column="3" Text="Status"/>
        <TextBox Grid.Row="4" Grid.Column="4" 
                 Text="{Binding Item.Status, FallbackValue='Active'}"/>
      </Grid>

      <Grid Grid.Row="1" Margin="0,8,0,0">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="1*"/>
          <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="4,0,4,8">
          <TextBlock Text="Memo"/>
          <TextBox Text="{Binding Item.Memo, FallbackValue='Usually blank'}"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="4,0,4,8">
          <TextBlock Text="Comment"/>
          <TextBox Text="{Binding Item.Comment, FallbackValue='Usually blank'}"/>
        </StackPanel>
      </Grid>

    </Grid>

    <StackPanel Grid.Row="2" Margin="4,0,4,10">
      <TextBlock Text="User Defined Memo"/>
      <TextBox Text="{Binding Item.UserDefinedMemo, FallbackValue='Normally Blank'}"/>
    </StackPanel>

    <uc:Vendors Grid.Row="3" DataContext="{Binding Item}"/>

  </Grid>
</UserControl>
