<UserControl x:Class="SEV.UI.UserControls.Vendors"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:conv="clr-namespace:SEV.UI.Converters"
             xmlns:theme="clr-namespace:CustomT.UI"
             mc:Ignorable="d" d:Background="White"
             d:DesignHeight="250" d:DesignWidth="800">

  <UserControl.Resources>
    <conv:TrimContentConverter x:Key="tCC"/>
  </UserControl.Resources>
  
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <Grid>
        <Grid.Resources>
          <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource bodyCopy}">
            <Setter Property="Foreground" Value="{theme:ThemeResource ResourceKey=MinContrast}"/>
            <Setter Property="Padding" Value="2,0"/>
          </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
        <ColumnDefinition Width="0.5*"/>
        <ColumnDefinition Width="1.5*"/>
          <ColumnDefinition Width="3*"/>
          <ColumnDefinition Width="2.5*"/>
          <ColumnDefinition Width="5*"/>
          <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Grid.ColumnSpan="6"
                    Background="{theme:ThemeResource ResourceKey=Complement}"
                    d:Background="{StaticResource brushMainThemeBlue}"/>
        <TextBlock Grid.Column="1" Text="Vendor#" d:Foreground="White"/>
        <TextBlock Grid.Column="2" Text="Vendor Name" d:Foreground="White"/>
        <TextBlock Grid.Column="3" Text="Vendor P/N" d:Foreground="White"/>
        <TextBlock Grid.Column="4" Text="Description" d:Foreground="White"/>
        <TextBlock Grid.Column="5" Text="Comment" d:Foreground="White"/>
      </Grid>
      <ScrollViewer Grid.Row="1" x:Name="scrollContent" 
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto">
        <ItemsControl ItemsSource="{Binding VendorInformation, FallbackValue='1111'}">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <DataTemplate.Resources>
                <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource bodyCopy}">
                  <Setter Property="Padding" Value="2,0"/>
                </Style>
              </DataTemplate.Resources>
              <Border BorderThickness="0,0,0,1"
                        BorderBrush="{theme:ThemeResource ResourceKey=Complement}"
                        d:BorderBrush="{StaticResource brushDark40}">
                <Grid>
                  <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="0.5*"/>
                  <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                  </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding Fpriority, FallbackValue='1'}"/>
                <TextBlock Grid.Column="1" Text="{Binding VendorNumber, FallbackValue='011270'}"/>
                  <TextBlock Grid.Column="2" Text="{Binding VendorName, FallbackValue='RS AMERICAS'}"/>
                  <TextBox Grid.Column="3" 
                           Text="{Binding PartNumber, FallbackValue='701148-1047-12',
                            Converter={StaticResource tCC}}"
                           Style="{StaticResource TextBoxReadOnly}"/>
                  <TextBlock Grid.Column="4" Text="{Binding Description, FallbackValue='DESCRIPTION\,LONG\,CHARACTERS'}"/>
                  <TextBlock Grid.Column="5" Text="{Binding Comments, FallbackValue='Lots of text might go here'}"/>
                </Grid>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </ScrollViewer>
    </Grid>
</UserControl>
