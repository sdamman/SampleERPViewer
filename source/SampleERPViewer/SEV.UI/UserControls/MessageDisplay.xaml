<UserControl x:Class="SEV.UI.UserControls.MessageDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:conv="clr-namespace:SEV.UI.Converters"
             xmlns:theme="clr-namespace:CustomT.UI"
             xmlns:gui="clr-namespace:CustomT.UI.UserControls"
             xmlns:uc="clr-namespace:SEV.UI.UserControls"
             mc:Ignorable="d" d:Background="White"
             d:DesignHeight="150" d:DesignWidth="600">

  <UserControl.Resources>
    <Style TargetType="{x:Type gui:XamlImage}">
      <Setter Property="Margin" Value="10"/>
      <Setter Property="VerticalAlignment" Value="Center"/>
      <Setter Property="HorizontalAlignment" Value="Left"/>
      <Setter Property="Width" Value="100"/>
    </Style>
    <BooleanToVisibilityConverter x:Key="B2VC"/>
  </UserControl.Resources>

  <Grid Background="{theme:ThemeResource ResourceKey=ToastBackground}"
        d:Background="{StaticResource brushMainThemeBlue80t}">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <gui:XamlImage Template="{DynamicResource Icon_Info}"
                   x:Name="iconInfo"/>
    <gui:XamlImage Template="{DynamicResource Icon_Warning}"
                   x:Name="iconWarning"/>
    <gui:XamlImage Template="{DynamicResource Icon_Error}"
                   x:Name="iconError"/>
    <TextBlock Grid.Column="1"
               x:Name="messageBlock"
               Text="This is an important message" 
               Style="{DynamicResource emphasis}" 
               Margin="10,0,0,0" 
               VerticalAlignment="Center"/>
  </Grid>
</UserControl>
