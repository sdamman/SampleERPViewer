<UserControl x:Class="SEV.UI.UserControls.Inputs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:conv="clr-namespace:SEV.UI.Converters"
             xmlns:local="clr-namespace:SEV.UI.UserControls"
             xmlns:theme="clr-namespace:CustomT.UI"
             xmlns:gui="clr-namespace:CustomT.UI.UserControls"
             mc:Ignorable="d" d:Background="White"
             d:DesignHeight="85" d:DesignWidth="850">

  <UserControl.Resources>
    <Style TargetType="{x:Type RadioButton}" BasedOn="{StaticResource RadioButtonStyle}">
      <Setter Property="VerticalContentAlignment" Value="Center"/>
      <Setter Property="Margin" Value="0,0,12,0"/>
    </Style>
  </UserControl.Resources>

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*"/>
      <ColumnDefinition Width="1.2*"/>
    </Grid.ColumnDefinitions>
    <Border Grid.Column="0" Margin="2,0">
      <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal" Margin="10,0">
          <TextBlock Text="Part Number: " VerticalAlignment="Center"
                     Style="{DynamicResource bodyCopy}"/>
          <TextBox Height="25" MinWidth="100"
                   VerticalContentAlignment="Center"
                   Text="{Binding ParentNumber, Mode=TwoWay}"
                   Style="{DynamicResource TextBoxStyle}"
                   d:Style="{StaticResource TextBoxStyle}" 
                   AcceptsReturn="False" AcceptsTab="False"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
          <Button HorizontalAlignment="Left" 
                  Content="Get BOM" Margin="10"
                  Command="{Binding CommandGetBom}" 
                  CommandParameter="{Binding ParentNumber}"
                  Style="{DynamicResource BlueButtonStyle}"
                  IsEnabled="{Binding AreButtonsEnabled}"
                  d:Background="{StaticResource brushMainThemeBlue}"
                  d:Foreground="White"/>
          <Button HorizontalAlignment="Left" 
                  Content="Where Used" Margin="10"
                  Command="{Binding CommandGetWhereUsed}" 
                  CommandParameter="{Binding ParentNumber}"
                  Style="{DynamicResource BlueButtonStyle}"
                  IsEnabled="{Binding AreButtonsEnabled}"
                  d:Background="{StaticResource brushMainThemeBlue}"
                  d:Foreground="White"/>
          <Button HorizontalAlignment="Left" 
                  Content="Item Master" Margin="10"
                  Command="{Binding CommandGetItemMaster}" 
                  CommandParameter="{Binding ParentNumber}"
                  Style="{DynamicResource BlueButtonStyle}"
                  IsEnabled="{Binding AreButtonsEnabled}"
                  d:Background="{StaticResource brushMainThemeBlue}"
                  d:Foreground="White"/>
        </StackPanel>
      </StackPanel>
    </Border>
    <Border Grid.Column="1" Margin="2,0">
      <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal" Margin="5,0">
          <ComboBox ItemsSource="{Binding SearchTypes}"
                    SelectedItem="{Binding SelectedSearchType}"
                    SelectedIndex="{Binding SelectedSearchIndex}"
                    DisplayMemberPath="Description"
                    Margin="15,0,5,0" MinWidth="140"
                    VerticalAlignment="Center"/>

          <TextBox Height="25" MinWidth="200"
                   VerticalContentAlignment="Center"
                   Text="{Binding PartDescription, Mode=TwoWay,
                    UpdateSourceTrigger=PropertyChanged}"
                   Style="{DynamicResource TextBoxSearch}"
                   d:Style="{StaticResource TextBoxSearch}"
                   AcceptsReturn="False"
                   AcceptsTab="False">
            <TextBox.InputBindings>
              <KeyBinding Command="{Binding CommandSearch}" Key="Return"
                          CommandParameter="{Binding PartDescription}"/>
            </TextBox.InputBindings>
            <TextBox.ToolTip>
              <Border Background="{theme:ThemeResource ResourceKey=MaxContrast}">
                <TextBlock Text="No wildcards needed." Margin="10"/>
              </Border>
            </TextBox.ToolTip>
          </TextBox>
          <Button Style="{DynamicResource ButtonSearch}"
                  Height="25" Margin="-1,0,0,0"
                  MinWidth="22"
                  Command="{Binding CommandSearch}" 
                  CommandParameter="{Binding PartDescription}"
                  Padding="3"
                  IsDefault="True">
          </Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5,8">
          <RadioButton Content="Starts With" IsChecked="{Binding IsStartsWith}"/>
          <RadioButton Content="Ends With" IsChecked="{Binding IsEndsWith}"/>
          <RadioButton Content="Contains" IsChecked="{Binding IsContains}"/>
          <Expander Style="{DynamicResource ExpanderStyle}" Header="Advanced">
            <local:AdvancedSearch Margin="-420,0,0,0"
                                  DataContext="{Binding VMAS}"/>
          </Expander>
        </StackPanel>

      </StackPanel>
    </Border>
  </Grid>
</UserControl>
