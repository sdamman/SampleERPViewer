<UserControl x:Class="SEV.UI.UserControls.PartSimple"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:conv="clr-namespace:SEV.UI.Converters"
             xmlns:theme="clr-namespace:CustomT.UI"
             mc:Ignorable="d" d:Background="White"
             d:DesignHeight="150" d:DesignWidth="800">

  <UserControl.Resources>
    <conv:CurrencyDisplayConverter x:Key="cDC"/>
    <conv:TrimContentConverter x:Key="tCC"/>
    <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource bodyCopy}"/>
  </UserControl.Resources>

  <Grid Margin="20,0">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Border Grid.Row="0" BorderBrush="{theme:ThemeResource ResourceKey=MaxContrast}"
            d:BorderBrush="Black" BorderThickness="0,0,0,1">
      <Grid>
        <Grid.Resources>
          <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource bodyCopy}">
            <Setter Property="Foreground" Value="{theme:ThemeResource ResourceKey=Complement}"/>
          </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="2*"/>
          <ColumnDefinition Width="1*"/>
          <ColumnDefinition Width="5*"/>
          <ColumnDefinition Width="1*"/>
          <ColumnDefinition Width="1.5*"/>
          <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
          <TextBlock Text="Part Number"/>
          <TextBlock Text="{Binding PartSummary.PartNumber, FallbackValue='59512',
                      Converter={StaticResource tCC}}"
                     Foreground="{theme:ThemeResource ResourceKey=MaxContrast}"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
          <TextBlock Text="Rev"/>
          <TextBlock Text="{Binding PartSummary.Revision, FallbackValue='000'}"
                     Foreground="{theme:ThemeResource ResourceKey=MaxContrast}"/>
        </StackPanel>
        <StackPanel Grid.Column="2">
          <TextBlock Text="Description"/>
          <TextBlock Text="{Binding PartSummary.Description, FallbackValue='DESCRIPTION,GOES,HERE'}"
                     Foreground="{theme:ThemeResource ResourceKey=MaxContrast}"/>
        </StackPanel>
        <StackPanel Grid.Column="3">
          <TextBlock Text="UOM"/>
          <TextBlock Text="{Binding PartSummary.UnitOfMeasure, FallbackValue='EA'}"
                     Foreground="{theme:ThemeResource ResourceKey=MaxContrast}"/>
        </StackPanel>
        <StackPanel Grid.Column="4">
          <TextBlock Text="Std Cost"/>
          <TextBlock Text="{Binding PartSummary.StandardCost, FallbackValue='$139.62',
            Converter={StaticResource cDC}}"
                     Foreground="{theme:ThemeResource ResourceKey=MaxContrast}"/>
        </StackPanel>
        <StackPanel Grid.Column="5">
          <TextBlock Text="Status"/>
          <TextBlock Text="{Binding PartSummary.Status, FallbackValue='Active'}"
                     Foreground="{theme:ThemeResource ResourceKey=MaxContrast}"/>
        </StackPanel>
      </Grid>
    </Border>
  </Grid>
</UserControl>
