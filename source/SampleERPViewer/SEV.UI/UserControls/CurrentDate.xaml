<UserControl x:Class="SEV.UI.UserControls.CurrentDate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SEV.UI.UserControls"
             xmlns:theme="clr-namespace:CustomT.UI"
             mc:Ignorable="d" d:Background="White">
  <Grid>
    <TextBlock Text="{Binding DateForToday, FallbackValue='25Feb'}" Margin="0"
               FontFamily="Segoe UI Semibold" 
               FontSize="24"
               Foreground="{StaticResource brushMainThemeBlue}"/>
  </Grid>
</UserControl>
