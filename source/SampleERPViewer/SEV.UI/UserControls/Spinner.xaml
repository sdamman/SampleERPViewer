<UserControl x:Class="SEV.UI.UserControls.Spinner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:theme="clr-namespace:CustomT.UI"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
  
	<Viewbox Stretch="Uniform" >
		<Canvas Width="200" Height="200"
						RenderTransformOrigin="0.5,0.5">
			<Ellipse Fill="{theme:ThemeResource ResourceKey=MinContrast}" 
               d:Fill="{StaticResource brushWhite}"
               Width="30" Height="30" Opacity="0.90"
							 Canvas.Top="0" Canvas.Left="85"/>
      <Ellipse Fill="{theme:ThemeResource ResourceKey=MinContrast}" 
               d:Fill="{StaticResource brushWhite}" 
               Width="30" Height="30" Opacity="0.80"
							 Canvas.Top="16" Canvas.Left="35"/>
      <Ellipse Fill="{theme:ThemeResource ResourceKey=MinContrast}" 
               d:Fill="{StaticResource brushWhite}" 
               Width="30" Height="30" Opacity="0.70"
							 Canvas.Top="59" Canvas.Left="4"/>
      <Ellipse Fill="{theme:ThemeResource ResourceKey=MinContrast}" 
               d:Fill="{StaticResource brushWhite}" 
               Width="30" Height="30" Opacity="0.60"
							 Canvas.Top="111" Canvas.Left="4"/>
      <Ellipse Fill="{theme:ThemeResource ResourceKey=MinContrast}" 
               d:Fill="{StaticResource brushWhite}" 
               Width="30" Height="30" Opacity="0.50"
							 Canvas.Top="154" Canvas.Left="35"/>
      <Ellipse Fill="{theme:ThemeResource ResourceKey=MinContrast}" 
               d:Fill="{StaticResource brushWhite}" 
               Width="30" Height="30" Opacity="0.40"
							 Canvas.Top="170" Canvas.Left="85"/>
      <Ellipse Fill="{theme:ThemeResource ResourceKey=MinContrast}" 
               d:Fill="{StaticResource brushWhite}" 
               Width="30" Height="30" Opacity="0.30"
							 Canvas.Top="154" Canvas.Left="135"/>
      <Ellipse Fill="{theme:ThemeResource ResourceKey=MinContrast}" 
               d:Fill="{StaticResource brushWhite}" 
               Width="30" Height="30" Opacity="0.20"
							 Canvas.Top="111" Canvas.Left="166"/>
      <Ellipse Fill="{theme:ThemeResource ResourceKey=MinContrast}" 
               d:Fill="{StaticResource brushWhite}" 
               Width="30" Height="30" Opacity="0.10"
							 Canvas.Top="59" Canvas.Left="166"/>
			<Canvas.RenderTransform>
				<RotateTransform x:Name="rotation" Angle="0"/>
			</Canvas.RenderTransform>
			<Canvas.Triggers>
				<EventTrigger RoutedEvent="Canvas.Loaded">
					<BeginStoryboard>
						<Storyboard>
							<DoubleAnimationUsingKeyFrames Storyboard.TargetName="rotation"
																					 Storyboard.TargetProperty="Angle"
																					 RepeatBehavior="Forever">
								<EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
								<EasingDoubleKeyFrame KeyTime="0:0:1.5" Value="360"/>
							</DoubleAnimationUsingKeyFrames>
						</Storyboard>
					</BeginStoryboard>
				</EventTrigger>
			</Canvas.Triggers>
		</Canvas>
	</Viewbox>
</UserControl>
