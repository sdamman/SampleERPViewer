<UserControl x:Class="SEV.UI.UserControls.PartNumberBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:theme="clr-namespace:CustomT.UI"
             xmlns:conv="clr-namespace:SEV.UI.Converters"
             xmlns:uc="clr-namespace:SEV.UI.UserControls"
             mc:Ignorable="d" 
             Background="{StaticResource brushMainThemeBlue}">

  <StackPanel >
    <Button Content="Item Master"
            Command="{Binding DataContext.CommandGetItemMaster, 
      RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window}}"
            CommandParameter="{Binding Tag, 
      RelativeSource={RelativeSource FindAncestor, 
      AncestorType={x:Type uc:PartNumberBox}}}"
            HorizontalAlignment="Center"
            Style="{StaticResource WhiteButtonStyle}"
            Padding="10,2"
            Margin="5,1" Cursor="Hand"/>
    <Button Content="Bill Of Material"
            Command="{Binding DataContext.CommandGetBom, 
      RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window}}"
            CommandParameter="{Binding Tag, 
      RelativeSource={RelativeSource FindAncestor, 
      AncestorType={x:Type uc:PartNumberBox}}}"
            HorizontalAlignment="Center"
            Style="{StaticResource WhiteButtonStyle}"
            Padding="10,2"
            Margin="5,1" Cursor="Hand"/>
    <Button Content="Where Used"
            Command="{Binding DataContext.CommandGetWhereUsed, 
      RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window}}"
            CommandParameter="{Binding Tag, 
      RelativeSource={RelativeSource FindAncestor, 
      AncestorType={x:Type uc:PartNumberBox}}}"
            HorizontalAlignment="Center"
            Style="{StaticResource WhiteButtonStyle}"
            Padding="10,2"
            Margin="5,1" Cursor="Hand"/>
  </StackPanel>
</UserControl>
