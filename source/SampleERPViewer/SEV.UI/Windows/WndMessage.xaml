<Window x:Class="SEV.UI.Windows.WndMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:theme="clr-namespace:CustomT.UI"
        xmlns:gui="clr-namespace:CustomT.UI.UserControls"
        xmlns:local="clr-namespace:SEV.UI.UserControls"
        mc:Ignorable="d"
        Title="Some Message" MinHeight="150" Width="250"
        MaxWidth="500"
        Style="{DynamicResource WindowMessageStyle}" 
        SizeToContent="Height">

  <Window.Resources>
    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BlueButtonStyle}">
      <Setter Property="Margin" Value="10,0"/>
      <Setter Property="Padding" Value="7,5"/>
    </Style>
  </Window.Resources>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Grid Grid.Row="0" >
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Viewbox Grid.Column="0"
        Height="34" Margin="10,0">
        <gui:XamlImage x:Name="MessageTypeIcon" 
                       Template="{StaticResource Icon_Warning}"/>
      </Viewbox>
      <TextBlock x:Name="MessageBody" 
               Grid.Column="1"
               Text="Message goes here."
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               TextWrapping="Wrap"
               Margin="5,20"
               Style="{DynamicResource bodyCopy}"/>
    </Grid>
    <WrapPanel Grid.Row="1" Orientation="Horizontal" 
               HorizontalAlignment="Center"
               Margin="0,10">
      <Button x:Name="ButtonYes"
              d:Background="{StaticResource brushMainThemeBlue}"
              d:Foreground="White"
              Click="Button_Click"
              Content="Yes" />
      <Button x:Name="ButtonNo"
              Click="Button_Click"
              Content="No"/>
      <Button x:Name="ButtonOk"
              Click="Button_Click"
              Content="Ok"/>
      <Button x:Name="ButtonCancel"
              Click="Button_Click"
              Content="Cancel"/>
    </WrapPanel>
  </Grid>
</Window>
